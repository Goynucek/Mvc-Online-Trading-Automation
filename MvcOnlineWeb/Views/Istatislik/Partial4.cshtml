@model IEnumerable<MvcOnlineWeb.Models.Classes.Urun>
<div>
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Ürünler</h3>

            <div class="card-tools">
                <ul class="pagination pagination-sm float-right">
                    <li class="page-item"><a class="page-link" href="#">&laquo;</a></li>
                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item"><a class="page-link" href="#">&raquo;</a></li>
                </ul>
            </div>
        </div>
        <!-- /.card-header -->
        <div class="card-body p-0">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width: 10px">#</th>
                        <th>Urun</th>
                        <th>Stok</th>
                        <th style="width: 40px">Adet</th>
                    </tr>
                </thead>
                <tbody>
                    @{int sayi = 0;}
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@{sayi++;} @sayi</td>
                            <td>@x.UrunAd</td>
                            <td>
                                <div class="progress progress-xs">
                                    @if (x.Stok <= 5)
                                    {
                                        <div class="progress-bar progress-bar-danger bg-danger" style="width: 25%"></div>
                                    }
                                    else if (x.Stok <= 10)
                                    {
                                        <div class="progress-bar progress-bar-info bg-info" style="width: 50%"></div>
                                    }
                                    else if (x.Stok <= 15)
                                    {
                                        <div class="progress-bar progress-bar-success bg-primary" style="width: 75%"></div>
                                    }
                                    else
                                    {
                                        <div class="progress-bar progress-bar-success bg-success" style="width: 100%"></div>
                                    }
                                </div>
                            </td>
                            <td><span class="badge bg-danger">@x.Stok</span></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
</div>

